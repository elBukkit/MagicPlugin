<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.elmakers.mine.bukkit</groupId>
        <artifactId>Magic-parent</artifactId>
        <version>10.9.8-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <packaging>pom</packaging>
    <groupId>com.elmakers.mine.bukkit.compatibility</groupId>
    <artifactId>CompatibilityLib-parent</artifactId>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <version.java>1.8</version.java>
        <findbugs.version>1.3.9</findbugs.version>
    </properties>

    <repositories>
        <repository>
            <id>elMakers</id>
            <url>https://maven.elmakers.com/repository/</url>
        </repository>

        <repository>
            <id>spigot-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>com.elmakers.mine.bukkit</groupId>
            <artifactId>MagicAPI</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <modules>
        <module>common</module>
        <module>base</module>
        <module>paper</module>
        <module>spigot</module>
        <module>legacy</module>
        <module>v1_9</module>
        <module>v1_10</module>
        <module>v1_11</module>
        <module>v1_12</module>
        <module>v1_13</module>
        <module>v1_14</module>
        <module>v1_15</module>
        <module>v1_16</module>
        <module>modern</module>
        <module>v1_17_0</module>
        <module>v1_17_1</module>
        <module>v1_18_0</module>
        <module>v1_18_1</module>
        <module>v1_18_2</module>
        <module>v1_19_0</module>
        <module>v1_19_1</module>
        <module>v1_19_2</module>
        <module>v1_19_3</module>
        <module>v1_19_4</module>
        <module>v1_20_0</module>
        <module>v1_20_1</module>
        <module>v1_20_2</module>
        <module>v1_20_3</module>
        <module>v1_20_4</module>
        <module>main</module>
    </modules>

    <build>
        <plugins>
            <!-- Checkstyle -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <version>3.1.1</version>
                <configuration>
                    <configLocation>checkstyle.xml</configLocation>
                    <encoding>UTF-8</encoding>
                    <consoleOutput>true</consoleOutput>
                    <failsOnError>true</failsOnError>
                    <linkXRef>false</linkXRef>
                    <resourceIncludes>**/*.yml</resourceIncludes>
                </configuration>
                <executions>
                    <execution>
                        <id>validate</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>

                <!-- Use a more up to date version of checkstyle -->
                <dependencies>
                    <dependency>
                        <groupId>com.puppycrawl.tools</groupId>
                        <artifactId>checkstyle</artifactId>
                        <version>8.29</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>
</project>
